extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data
			small menu untuk mengedit data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Data Siswa
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-check
											| Berhasil! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama
									input(type='text',value="#{data.nama}",name='nama',placeholder='Masukkan Nama', autofocus).form-control
								.form-group
									label
										| Kelas
									input(type='text',value="#{ (kelas == undefined) ? data.kelas : kelas }",name='kelas',placeholder='Masukkan Kelas').form-control
								.form-group
									label
										| Total Pembayaran
									input(type='text',value="#{ (total_pembayaran == undefined) ? data.total_pembayaran : total_pembayaran }",name='total_pembayaran',placeholder='Masukkan Total Pembayaran').form-control
								.form-group
									label
										| Status Pembayaran
									input(type='text',value="#{ (status_pembayaran == undefined) ? data.status_pembayaran : status_pembayaran }",name='status_pembayaran',placeholder='Masukkan Status Pembayaran').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/customers').btn.btn-primary.pull-right
									| Back